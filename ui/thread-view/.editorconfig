# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# default 2 space indentation
[*.*]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[test/fixtures/*]
trim_trailing_whitespace = false
insert_final_newline = false
